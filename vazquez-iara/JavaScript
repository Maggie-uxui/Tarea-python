// array = listas

//var es una variable global, se pone predeterminado cuando no se declara con let

// python---------

frutas=["manzana","bananas","naranjas"]

frutas[1]="pera" //para cambiar el valor del indice 

frutas.append("uva") //para agregar un valor a la lista

frutas.pop() //para eliminar un elemeno de la lista (si esta vacio elimina el ultimo elemento)

print(frutas[0]) //para acceder y mostrar un objeto (manzanas)

//js--------------

let frutas=["manzana","bananas","naranjas"];

frutas[1]="pera"; //para cambiar el valor del indice 

frutas.push("Uva"); //para agregar un valor a la lista

frutas.pop(); //para eliminar un elemeno de la lista (si esta vacio elimina el ultimo elemento)

console.log(frutas[1]); //para acceder y mostrar un objeto (bananas/pera) tambien se puede usar alert

console.log(frutas); // muestra todo lo que hay en la lista 
